<div class="container mt-5"style="margin-bottom: 200px;">
  <table class="table">
    <thead class="thead text-white"style="background-color: #808080;">
      <tr>
        <th scope="col"><i class="fa fa-circle "  style="color:#17a2b8;"></i>　店舗名</th>
        <th scope="col"><i class="fa fa-circle "  style="color:#17a2b8;"></i>　お店のコメント</th>
      </tr>
    </thead>
    <tbody>
    <% @likes.preload(:post).each.with_index(1) do |like,index|%>
      <tr>
        <td><%= link_to like.post.title,post_path(like.post) ,class: "Editlink"%></td>
        <td><%= like.post.content.truncate(50)%></td>
      </tr>
    <%end%>
      </tr>
    </tbody>
  </table>
</div>