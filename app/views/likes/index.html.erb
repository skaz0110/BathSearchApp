<div class="container mt-5"style="margin-bottom: 400px;">
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col"><i class="fa fa-circle "  style="color:#17a2b8;"></i>　店舗名</th>
        <th scope="col"><i class="fa fa-circle "  style="color:#17a2b8;"></i>　お店のコメント</th>
      </tr>
    </thead>
    <tbody>
    <% @likes.each.with_index(1) do |like,index|%>
      <% post = Post.find(like.post_id) %>
      <tr>
        <td><%= link_to post.title ,post_path(post),class: "Editlink"%></td>
        <td><%= post.content.truncate(50)%></td>
      </tr>
    <%end%>
      </tr>
    </tbody>
  </table>
</div>