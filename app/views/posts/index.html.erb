<form class="form-inline my-2 my-lg-0">
  <input type="search" class="form-control mr-sm-2" placeholder="検索" aria-label="検索">
  <button type="submit" class="btn btn-outline-success my-2 my-sm-0 ">検索</button>
</form>

<%= form_with model: @post do |f| %>
    <label>店名<%= f.text_field :title    %></label>
    <label>画像<%= f.text_field :iamge    %></label>
    <label>内容<%= f.text_area  :content  %></label>
    <%=f.submit '投稿する' %>
<% end %>

<div class="container mt-5">
  <div class="row ">
  <% @posts.each do |post|%>
    <div class="col-12 col-md-6 col-lg-4 mb-4">
      <div class="card border-dark h-100">
        <%= post.image%>
        <img class="card-img-top" <%= image_tag '背景画像.jpg'%>>
        <div class="card-body">
          <h6 class="card-title"><%= post.title%></h6>
          <p class="card-text"><%= post.content%></p>  
          <div class="card-title btn btn-outline-info btn-block">
          <%= link_to  "詳細ボタン", post_path(post) %>
          </div>
        </div>
      </div>  
    </div>
  <%end%>
  </div>
</div>
