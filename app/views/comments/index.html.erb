<div class="text-center mt-5 ">
  <div class="container ">
    <div class="card w-100 " style="width: 18rem;">
      <div class="card-body">
        <div class="card-text">
          <h5><strong>
            <%= @post.title %>
          </strong></h5>
            <%= link_to "口コミ投稿", post_reviews_path(@post) %>
        </div>
          <div class="card-text">
            <div id="post_<%= @post.id %>">
              <%= render 'post' %>
            </div>
          </div>
      </div>
      
      <div>
        <%= link_to "店舗詳細" ,post_path(@post)%>
        <%= link_to "雀活" ,post_comments_path(@post)%>
      </div>
      
      
    <img class="card-img-top" width="100%" height="300"  src="<%= @post.image %>">
    <div class="card-body">
      <h5>
        コメント一覧
      </h5>
      <div class="form-group">
        <%= form_with model:[@post, @comment] do |form|  %>
        <%= form.text_area :content ,class:"form-control"%>
        <%= form.hidden_field :post_id, :value => params[:post_id] %>
        <%= form.submit "つぶやく",class:"btn btn-primary"%>
        <% end %>
      </div>
      <div>
        <% @comments.each do |comment| %>
          <p><hr>
            <img  height="40" src="<%= comment.user.image %>">
            <%= comment.user.username %>
            <%= l comment.created_at %>
          </p> 
            <%= comment.content %>
        <% end %> 
      </div>
    </div>
  </div>
</div> 
