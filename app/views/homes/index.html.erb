
<div class="mx-auto" style="width: 400px;" >
<%= search_form_for @q ,url: root_path do |f| %>
  <%= f.search_field :title_cont ,class:"form-control mr-sm-2"%>
  <%= f.submit ("検索"),class:"btn btn-outline-success my-2 my-sm-0"%>
<% end %>
</div>

<div class="container mt-5">
  <div class="row ">
    <% @posts.each do |post|%>
      <div class="col-12 col-md-6 col-lg-4 mb-4">
        <%= link_to post_path(post) ,class: "Editlink" do%>
          <div class="card border-dark h-100">
            <img class="card-img-top" src="<%= post.image %>">
            <div class="card-body">
              <div class="card-title">
                <h5><%= post.title%></h5>
              </div>
              <p class="card-text">
                <%= post.content.truncate(100)%>
              </p>  
            </div>
          </div>  
        <%end%>
      </div>
    <%end%>
  </div>
</div>

<div id="rateYo"></div>

<div class="mx-auto" style="width: 200px;">
  <%= paginate @posts %>
</div>

<% @youtube_data.items.each do |item| %>
  <% snippet = item.snippet %>
  <p><%= snippet.title %></p>
  <p><%= snippet.published_at%></p>
  <p><%= snippet.channel_title %></p>
  <div><iframe width="560" height="315" src="https://www.youtube.com/embed/<%= item.id.video_id %>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe></div>
<% end %>
